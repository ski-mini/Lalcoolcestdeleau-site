{% extends 'AppBundle::layout.html.twig' %}

{% trans_default_domain 'AppBundle' %}

{% block content %}

    <div class="col-lg-12 newDeck">
        <div class="col-lg-8" style="border-right:1px dotted gray;padding-right:15px;">
            <h1>Création d'un nouveau deck de règles <span class="label label-info">Aide</span></h1>
            <br/>
//todo 
            <form action="" method="post">
  <!--               <div class="form-group form-group-lg">
                    <input class="form-control" name="deckName" type="text" required placeholder="Nom du mode de jeu">
                </div> -->
                {{ form_start(form) }}
                    {% form_theme form 'bootstrap_3_layout.html.twig' %}
                    {{ form_widget(form) }}

                {{ form_end(form) }}
                <br/>
                {% for message in app.session.flashbag.get('success') %}
                    <div class="alert alert-success alert-dismissible" role="alert">
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      {{ message }}
                      <br/>
                      <a href="{{ path("homepage") }}">Retour à l'accueil</a>
                    </div>
                {% endfor %}
            </form>
        </div>
    </div>

{% endblock %}